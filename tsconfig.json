{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@rxweb/reactive-form-validators": [ "packages/reactive-form-validators" ],
      "@rxweb/reactive-dynamic-forms": [ "packages/reactive-dynamic-forms" ],
      "@rxweb/sanitizers": [ "packages/sanitizers" ],
      "@rxweb/generics": [ "packages/generics" ],
      "@rxweb/http": [ "packages/http" ]

    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
